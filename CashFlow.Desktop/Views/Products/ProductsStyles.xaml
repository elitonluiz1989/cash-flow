<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CashFlow.Desktop.Views.Products">
    <Style TargetType="Grid">
        <Setter Property="Background" Value="white" />
    </Style>

    <Style x:Key="ProductsTopPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="0, 5, 0, 10" />
    </Style>

    <Style x:Key="ProductsAddBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnStyle}">
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Gray" />
    </Style>

    <Style x:Key="ProductStyle" TargetType="local:ProductView">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Blue" />
        <Setter Property="Margin" Value="0, 0, 0, 10" />
        <Setter Property="Padding" Value="5" />
    </Style>
</ResourceDictionary>