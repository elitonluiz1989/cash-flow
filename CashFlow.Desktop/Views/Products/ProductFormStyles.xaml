<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:form="clr-namespace:CashFlow.Desktop.Views.Components.Form">
    <Style x:Key="FieldQuantity" TargetType="form:FormField">
        <Setter Property="FieldWidth" Value="35" />
    </Style>
    
    <Style x:Key="FieldPrice" TargetType="form:FormField">
        <Setter Property="FieldWidth" Value="80" />
    </Style>

    <Style x:Key="FormControlsContainer" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Bottom" />

        <Style.Resources>
            <Style TargetType="form:FormControls">
                <Setter Property="Height" Value="45" />
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>