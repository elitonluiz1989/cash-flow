<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="FormControlBtnStyle"  TargetType="Button" BasedOn="{StaticResource BtnDefaultStyle}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="10 5" />
    </Style>

    <Style x:Key="FormControlCancelStyle" TargetType="Button" BasedOn="{StaticResource FormControlBtnStyle}">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="FormControlSubmitStyle" TargetType="Button" BasedOn="{StaticResource FormControlBtnStyle}">
        <Setter Property="Background" Value="#24ad7b" />
        <Setter Property="BorderBrush" Value="#0e4d36" />
        <Setter Property="Foreground" Value="#0e4d36" />
    </Style>
    
</ResourceDictionary>